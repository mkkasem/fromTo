<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css	">
    <title>Document</title>
</head>

<style>
    .baseBlock {
        margin: 0px 0px 35px 0px;
        border-radius: 5px;
        overflow: hidden;
        background: #fff;
        -moz-transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        -o-transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .baseBlock:hover {
        -webkit-transform: translate(0, -8px);
        -moz-transform: translate(0, -8px);
        -ms-transform: translate(0, -8px);
        -o-transform: translate(0, -8px);
        transform: translate(0, -8px);
        box-shadow: 0 20px 20px rgba(0, 0, 0, 0.2);
    }

</style>
<body>
    <%- include("navbar");-%> 
    
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <h3 class="mb-3">Pending Posts</h3>
                </div>
                <%if(posts.length>3){%>
                <div class="col-6 text-right">
                    <a class="btn btn-primary mb-3 mr-1" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                        <i class="fa fa-arrow-left"></i>
                    </a>
                    <a class="btn btn-primary mb-3 " href="#carouselExampleIndicators2" role="button" data-slide="next">
                        <i class="fa fa-arrow-right"></i>
                    </a>
                </div>
                <%}%>
                <div class="col-12">
                    <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                    <%if(posts.length<=3){ %>
                                        <div class="carousel-item active">                              
                                            <div class="row">
                                                <% for(let i=0 ; i<posts.length ; i++){ %>

                                                    <div class="col-md-4 mb-3">
                                                        <a href="/api/posts/<%=posts[i].id%>">
                                                            <div class="card baseBlock" style=" height: 400px;">
                                                                <img class="img-fluid h-75" alt="100%x280" src="<%=posts[i].image%>"  >
                                                                <div class="card-body h-25 overflow-hidden">
                                                                    <h4 class="card-title"><%=posts[i].title%></h4>
                                                                    <p class="card-text ">With supporting text below as a natural lead-in to additional content.</p>
                        
                                                                </div>
                        
                                                            </div>
                                                        </a>
                                                    </div>
                                                <%}%>
                                            </div>
                                        </div>
                                    <%}%> 
                                    <% if(posts.length>3) { %>
                                        <div class="carousel-item active">
                                            <div class="row">
                                                <% for(let i=0 ; i<3 ; i++){ %>
                                                    <div class="col-md-4 mb-3">
                                                        <a href="/api/posts/<%=posts[i].id%>">
                                                            <div class="card baseBlock" style=" height: 400px;">
                                                                <img class="img-fluid h-75" alt="100%x280" src="<%=posts[i].image%>"  >
                                                                <div class="card-body h-25 overflow-hidden">
                                                                    <h4 class="card-title"><%=posts[i].title%></h4>
                                                                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        
                                                                </div>
                        
                                                            </div>
                                                        </a>
                                                    </div>
                                                <%} %>
                                    
                                            </div>
                                        </div>                  
                                        <%posts.splice(0,3);%>

                                        <% while(true){ %>
                                            <div class="carousel-item">
                                                <div class="row">
                                                    <% for(let i=0 ; i<3 ; i++){%>
                                                        <%if(i<posts.length){ %>
                                                            <div class="col-md-4 mb-3">
                                                                <a href="/api/posts/<%=posts[i].id%>">
                                                                    <div class="card baseBlock" style=" height: 400px;">
                                                                        <img class="img-fluid h-75" alt="100%x280" src="<%=posts[i].image%>"  >
                                                                        <div class="card-body h-25 overflow-hidden">
                                                                            <h4 class="card-title"><%=posts[i].title%></h4>
                                                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                
                                                                        </div>
                                
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        <%}%>
                                                    <%}%>
                                                </div>
                                            </div>
                                            <%posts.splice(0,3);
                                            if(posts.length==0){
                                                break;
                                            }
                                        }%>
                                    <%}%>
                            </div>
                    </div>
                </div>

                
            </div>
        </div>
    </section>
  
    <script src="	https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>

  
</body>
</html>